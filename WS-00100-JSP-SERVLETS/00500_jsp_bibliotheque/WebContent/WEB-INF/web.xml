<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app id="WebApp">
	<display-name>progBiblio</display-name>

	<servlet>
		<servlet-name>CtrlPrincipal</servlet-name>
		<display-name>CtrlPrincipal</display-name>
		<servlet-class>fr.uitt.biblio.controleur.CtrlPrincipal</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CtrlLogin</servlet-name>
		<display-name>CtrlLogin</display-name>
		<servlet-class>fr.uitt.biblio.controleur.CtrlLogin</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CtrlReservation</servlet-name>
		<display-name>CtrlReservation</display-name>
		<servlet-class>fr.uitt.biblio.controleur.CtrlReservation</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>login</servlet-name>
		<display-name>login</display-name>
		<jsp-file>/login.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>reservation</servlet-name>
		<display-name>reservation</display-name>
		<jsp-file>/reservation.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>deconnexion</servlet-name>
		<display-name>deconnexion</display-name>
		<jsp-file>/deconnexion.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>erreur</servlet-name>
		<display-name>erreur</display-name>
		<jsp-file>/erreur.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>test</servlet-name>
		<display-name>test</display-name>
		<jsp-file>/test.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>DestroySession</servlet-name>
		<display-name>DestroySession</display-name>
		<description></description>
		<servlet-class>controls.DestroySession</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>CtrlPrincipal</servlet-name>
		<url-pattern>/CtrlPrincipal</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CtrlLogin</servlet-name>
		<url-pattern>/CtrlLogin</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CtrlReservation</servlet-name>
		<url-pattern>/CtrlReservation</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login.jsp</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>reservation</servlet-name>
		<url-pattern>/reservation.jsp</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>deconnexion</servlet-name>
		<url-pattern>/deconnexion.jsp</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>erreur</servlet-name>
		<url-pattern>/erreur</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>test</servlet-name>
		<url-pattern>/test</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DestroySession</servlet-name>
		<url-pattern>/DestroySession</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<error-page>
		<error-code>404</error-code>
		<location>/erreur.html</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/erreur.html</location>
	</error-page>

	<taglib>
	  <taglib-uri>/tld</taglib-uri> 
	  <taglib-location>/WEB-INF/tlds/taglib.tld</taglib-location> 
	</taglib>
</web-app>
